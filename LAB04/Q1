#include<iostream>

using namespace std;

void bubblesort(int arr[], int n)
{ int count=0;
for (int i = 0; i<n; i++) {

       for (int j = 0; j<n-1;j++) {
       if (arr[j]> arr[j+1]) {
           int temp = arr[j];
           arr[j] = arr[j + 1];
      arr[j + 1] = temp;
             }            
          }
             count++;
        }
cout<<"No. of comparison perfromed: "<<count<<endl;

}
void printArray(int arr[], int size) {
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    int arr[] = {64, 34, 25, 12, 22, 11, 90};
    int n = sizeof(arr) / sizeof(arr[0]);
    cout << "Input list: ";
    printArray(arr, n);
   
    cout << "Sorted Element List: ";
    bubblesort(arr, n);
    printArray(arr, n);
   
    return 0;
}

