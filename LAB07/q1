#include <iostream>
#include <string>
using namespace std;

class Node {
public:
    string packageName;
    Node* left;
    Node* right;

    Node(string name) {
        packageName = name;
        left = right = nullptr;
    }
};

class TourTree {
public:
    Node* createNode(string name) {
        return new Node(name);
    }

    void displayTree(Node* root, int level = 0) {
        if (!root) 
        return;
        for (int i = 0; i < level; i++)
            cout << "   ";
        cout << "- " << root->packageName << endl;
        displayTree(root->left, level + 1);
        displayTree(root->right, level + 1);
    }
};

int main() {
    TourTree t;

    Node* root = t.createNode("World Tours");
    root->left = t.createNode("Asia Tours");
    root->right = t.createNode("Europe Tours");
    root->left->left = t.createNode("Japan Tour");
    root->left->right = t.createNode("Thailand Tour");
    root->right->left = t.createNode("France Tour");
    root->right->right = t.createNode("Italy Tour");

    cout << "===== Tour Package Hierarchy =====\n";
    t.displayTree(root);

    return 0;
}
