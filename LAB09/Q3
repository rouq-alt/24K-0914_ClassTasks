#include <iostream>
using namespace std;

class Node {
public:
    int key;
    Node *left, *right;
    int height;

    Node(int k) {
        key = k;
        left = right = nullptr;
        height = 1;
    }
};

class AVLTree {
public:
    int getHeight(Node* n) 
{ return n == nullptr ? 0 : n->height; }
    int getBalance(Node* n) {
        if (n == nullptr)
        return 0;

        return getHeight(n->left) - getHeight(n->right);
    }

    Node* rightRotate(Node* y) {
        Node* x = y->left;
        Node* t2 = x->right;
        x->right = y;
        y->left = t2;
        y->height = max(getHeight(y->left), getHeight(y->right)) + 1;
        x->height = max(getHeight(x->left), getHeight(x->right)) + 1;

        return x;
    }

    Node* leftRotate(Node* x) {
        Node* y = x->right;
        Node* t2 = y->left;
        y->left = x;
        x->right = t2;
        x->height = max(getHeight(x->left), getHeight(x->right)) + 1;
        y->height = max(getHeight(y->left), getHeight(y->right)) + 1;

        return y;
    }

    Node* insert(Node* node, int key) {
        if (node == nullptr)
            return new Node(key);
        if (key < node->key)
            node->left = insert(node->left, key);
        else if (key > node->key)
            node->right = insert(node->right, key);
        else
            return node;

        node->height = 1 + max(getHeight(node->left), getHeight(node->right));
        int bf = getBalance(node);

        if (bf > 1 && key < node->left->key)
            return rightRotate(node);
        if (bf < -1 && key > node->right->key)
            return leftRotate(node);
        if (bf > 1 && key > node->left->key) {
            node->left = leftRotate(node->left);
            return rightRotate(node);
        }

        if (bf < -1 && key < node->right->key) {
            node->right = rightRotate(node->right);
            return leftRotate(node);
        }

        return node;
    }

    void inorder(Node* root) {
        if (root != nullptr) {
            inorder(root->left);
            cout << root->key << " ";
            inorder(root->right);
        }
    }
};

int main() {
    AVLTree tree;
    Node* root = nullptr;

    int values[] = {10, 5, 15, 3, 7};
    int n = 5;

    for (int i = 0; i < n; i++) {
        root = tree.insert(root, values[i]);
    }

    cout << "Before inserting 12: ";
    tree.inorder(root);
    cout << endl;

    root = tree.insert(root, 12);

    cout << "After inserting 12: ";
    tree.inorder(root);
    cout << endl;

    cout << "\nHeight of tree = " << tree.getHeight(root) << endl;

    cout << "\nBalance Factors:\n";
    cout << "Root (" << root->key << ") BF = " << tree.getBalance(root) << endl;

    if (root->left)
        cout << "Left child (" << root->left->key << ") BF = " << tree.getBalance(root->left) << endl;

    if (root->right)
        cout << "Right child (" << root->right->key << ") BF = " << tree.getBalance(root->right) << endl;

    return 0;
}
